    <!-- Product owners -->

    <changeSet id="1.0.7" author="eugene.begun">
        <sql>CREATE TYPE product_owner_type AS ENUM('SP', 'JP')</sql>

        <createTable tableName="product_owners">
            <column name="id_product_owner" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="type" type="product_owner_type">
                <constraints nullable="false"/>
            </column>

            <column name="country" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="city" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="street" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="house" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="flat" type="VARCHAR(64)"/>

            <column name="registration_date" type="DATE" defaultValue="NOW">
                <constraints nullable="false"/>
            </column>

            <column name="phone" type="VARCHAR(255)"/>

            <column name="id_client_company" type="BIGSERIAL">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseTableName="product_owners"
                                 baseColumnNames="id_client_company"
                                 constraintName="fk_product_owner_client_companies"
                                 onDelete="CASCADE"
                                 referencedTableName="client_companies"
                                 referencedColumnNames="id_client_company"/>
    </changeSet>

    <!--Driver, Product, DeliveryNote-->
    <changeSet id="1.0.8" author="eugene.begun">

        <!--Driver-->
        <createTable tableName="driver">

            <column name="id_driver" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="surname" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="patronymic" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="passport" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <insert tableName="driver">
            <column name="name" value="driver-name-test"/>
            <column name="surname" value="driver-surname-test"/>
            <column name="patronymic" value="driver-pat-test"/>
            <column name="passport" value="passport-test-тест"/>
        </insert>

        <!--Product-->
        <sql>CREATE TYPE product_status AS ENUM('ACCEPTED', 'VERIFIED' , 'DELIVERED' , 'LOST')</sql>
        <createTable tableName="product">

            <column name="id_product" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="measure" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="sum" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="mass" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="product_status">
                <constraints nullable="false"/>
            </column>

            <column name="id_delivery_note" type="BIGSERIAL">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>


</databaseChangeLog>