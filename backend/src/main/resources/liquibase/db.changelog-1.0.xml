<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0" author="eugene.begun">
        <createTable tableName="users">
            <column name="id_user" type="BIGINT(20) UNSIGNED" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(45)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(45)"></column>
            <column name="surname" type="VARCHAR(45)"></column>
            <column name="patronymic" type="VARCHAR(45)"></column>
            <column name="birthday" type="DATE"></column>
            <column name="city" type="VARCHAR(45)"></column>
            <column name="street" type="VARCHAR(45)"></column>
            <column name="house" type="VARCHAR(45)"></column>
            <column name="flat" type="VARCHAR(45)"></column>
            <column name="email" type="VARCHAR(45)"></column>
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_bin"/>
        </modifySql>
    </changeSet>

    <changeSet id="1.0.1" author="eugene.begun">
        <createTable tableName="roles">
            <column name="id_role" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(45)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_bin"/>
        </modifySql>
    </changeSet>

    <changeSet id="1.0.2" author="eugene.begun">
        <createTable tableName="user_role">
            <column name="id_user" type="BIGINT(20) UNSIGNED"></column>
            <column name="id_role" type="INT"></column>
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_bin"/>
        </modifySql>
    </changeSet>

    <changeSet id="1.0.3" author="eugene.begun">
        <addForeignKeyConstraint baseColumnNames="id_user"
                                 baseTableName="user_role"
                                 constraintName="fk_user_role_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id_user"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet id="1.0.4" author="eugene.begun">
        <addForeignKeyConstraint baseColumnNames="id_role"
                                 baseTableName="user_role"
                                 constraintName="fk_user_role_roles"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id_role"
                                 referencedTableName="roles"/>
    </changeSet>

</databaseChangeLog>