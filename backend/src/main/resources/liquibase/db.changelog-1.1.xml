<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="1.1.1" author="vladislav.mironuk">
        <insert tableName="invoice">
            <column name="number" value="TTN123123123"/>
            <column name="status" value="REJECTED"/>
            <column name="registration_date" value="2020-01-01"/>
            <column name="shipper" value="OOO 'Cool company', Minsk, Nemiga 3 "/>
            <column name="consignee" value="OOO 'Cool warehouse', Smolensk, Lenina 5 "/>
            <column name="id_driver" value="1"/>
            <column name="id_user_registration" value="1"/>
            <column name="id_client_company" value="1"/>
            <column name="id_product_owner" value="1"/>
        </insert>
    </changeSet>

    <changeSet id="1.1.2" author="vladislav.mironuk">
        <createTable tableName="storage">
            <column name="id_storage" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="country" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="house" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.1.3" author="vladislav.mironuk">
        <insert tableName="storage">
            <column name="country" value="Belarus"/>
            <column name="city" value="Minsk"/>
            <column name="street" value="Gikalo"/>
            <column name="house" value="3"/>
            <column name="email" value="tractor@email.com"/>
            <column name="phone" value="37532338990"/>
        </insert>
    </changeSet>


    <changeSet id="1.1.4" author="vladislav.mironuk">
        <!--Product-->
        <sql>CREATE TYPE product_status AS ENUM('ACCEPTED', 'VERIFIED' , 'DELIVERED' , 'LOST')</sql>
        <sql>CREATE TYPE mass_measure AS ENUM('KG','TON')</sql>
        <sql>CREATE TYPE quantity_measure AS ENUM('PIECE','BOX', 'BARREL', 'BAG')</sql>
        <sql>CREATE TYPE currency_type AS ENUM('RUB','BYN', 'EURO', 'USD')</sql>
        <createTable tableName="product">

            <column name="id_product" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="quantity_measure" type="quantity_measure">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="mass_measure" type="mass_measure">
                <constraints nullable="false"/>
            </column>

            <column name="currency" type="currency_type">
                <constraints nullable="false"/>
            </column>

            <column name="mass" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="product_status" defaultValue="ACCEPTED">
                <constraints nullable="false"/> <!-- Is it necessary? We set default value -->
            </column>

            <column name="id_invoice" type="BIGSERIAL">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="id_invoice"
                                 constraintName="fk_product_invoice"
                                 onDelete="CASCADE"
                                 referencedTableName="invoice"
                                 referencedColumnNames="id_invoice"/>
    </changeSet>

    <changeSet id="1.1.5" author="vladislav.mironuk">
        <insert tableName="product">
            <column name="name" value="Beer"/>
            <column name="quantity_measure" value="BARREL"/>
            <column name="quantity" value="5"/>
            <column name="mass_measure" value="TON"/>
            <column name="mass" value="100"/>
            <column name="price" value="100"/>
            <column name="currency" value="RUB"/>
            <column name="status" value="ACCEPTED"/>
            <column name="id_invoice" value="1"/>
        </insert>

        <insert tableName="product">
            <column name="name" value="Cheese"/>
            <column name="quantity_measure" value="BAG"/>
            <column name="quantity" value="5"/>
            <column name="mass_measure" value="KG"/>
            <column name="mass" value="100"/>
            <column name="price" value="100"/>
            <column name="currency" value="EURO"/>
            <column name="status" value="ACCEPTED"/>
            <column name="id_invoice" value="2"/>
        </insert>
    </changeSet>
</databaseChangeLog>